---
import Layout from "../layouts/Layout.astro"
export interface Props {
	title: string;
}

const { title } = Astro.props.frontmatter;

const realTitle = "CCA - " + title;
---
<Layout title={realTitle}>
    <main>
        <a href="/"><p>‚Üê Back to Home</p></a>
        <h1>{title}</h1>
        <div class="instructions">
            <slot></slot>
        </div>
    </main>
</Layout>

<style is:global>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
        color: #1C71D8;
    }

    h2 {
        font-weight: 800;
    }
    a {
        text-decoration: none;
        font-weight: 600;
    }
	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: white;
		padding: 1rem;
		border-radius: 0.4rem;
	}
	.instructions code {
		font-size: 0.875em;
		font-weight: bold;
		background: rgba(var(--accent), 12%);
		color: rgb(var(--accent));
		border-radius: 4px;
		padding: 0.3em 0.45em;
	}
	.instructions strong {
		color: rgb(var(--accent));
	}

</style>